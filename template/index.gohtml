<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<title>Movie Scraper</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

  <body>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-md-offset-2">
          <h1 class="page-header">Client List</h1>

          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Duration</th>
                  <th>Details</th>
                  <th>ShowTime</th>
                </tr>
              </thead>
              <tbody>
                {{range .}}
                <tr>
                  <td>{{.ID}}</td>
                  <td>{{.Title}}</td>
                  <td>{{.Duration}}</td>
                  <td>{{.Details.ReleaseDate}}<br />{{.Details.Genre}}<br />{{.Details.Language}}</td>
                  <td>{{.ShowTime}}</td>
                  <td><a class="btn btn-info btn-xs" href="/movies/{{.ID}}">details</a></td>
                </tr>
                {{end}}
                <tr>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                </tr>
              </tbody>
            </table>
            <p class="pull-right"><a href="/CreateClients" class="btn btn-primary">Add New Client</a></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
  
  </body>
</html>
